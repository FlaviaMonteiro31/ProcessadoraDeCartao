          }
        }
      },
      "AutenticacaoRequest": {
        "required": [
          "senha",
          "usuario"
        ],
        "type": "object",
        "properties": {
          "usuario": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          }
        }
      },
