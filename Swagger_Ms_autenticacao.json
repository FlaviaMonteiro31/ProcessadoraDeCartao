    "/api/autenticacao/usuario": {
      "post": {
        "tags": [
          "autenticacao-controller"
        ],
        "description": "Registra o usuario e o cliente.",
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsuarioRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
