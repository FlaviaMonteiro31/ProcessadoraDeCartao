          "senha",
          "usuario"
        ],
        "type": "object",
        "properties": {
          "usuario": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "telefone": {
            "pattern": "\\+55\\s\\d{2}\\s\\d{5}-\\d{4}",
            "type": "string"
          },
          "cep": {
            "pattern": "\\d{5}-\\d{3}",
            "type": "string"
          }
        }
      },
      "ClienteResponse": {
        "type": "object",
        "properties": {
          "clientId": {
